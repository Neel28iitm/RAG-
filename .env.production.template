# Production Environment Variables Template
# Copy this to .env on EC2 server and fill in actual values

# Google AI (Required)
GOOGLE_API_KEY=your_google_api_key_here

# LlamaParse (Required for PDF parsing)
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# Qdrant Cloud (CRITICAL - ADD YOUR CLUSTER URL!)
QDRANT_URL=https://YOUR-CLUSTER-ID.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Cohere Reranker (Required)
COHERE_API_KEY=your_cohere_api_key_here

# Database (PostgreSQL - Local on EC2)
DATABASE_URL=postgresql://rag_user:rag_password@localhost:5432/rag_db

# Redis (Local on EC2)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (Required if using Parent-Document Retrieval)
# Leave empty if not using S3 storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your_s3_bucket_name
